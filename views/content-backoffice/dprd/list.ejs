<%- include('../../template-backoffice/header.ejs'); -%>
<%
  function numberWithCommas(x) {
    return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
}

%>
<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Data Kegiatan <small>(Nama Anggota DPRD)</small></strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/dashboard">Dashboard</a>
        </li>
        <li class="active">Data</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-header header-line">
          
        </div>
        <div class="panel-content pagination2">
          <table class="table table-bordered table-striped table-hover" id="data">
            <thead>
              <tr>
                <th class="header">No.</th>
                <th class="header">Kegiatan</th>
                <th class="header">Jenis Pekerjaan</th>
                <th class="header">Lokasi</th>
                <th class="header">Kecamatan</th>
                <th class="header">Kelurahan</th>
                <th class="header">Koordinat Lokasi</th>
                <th class="header" >Volume</th>
                <th class="header" >Jenis Anggaran</th>
                <th class="header" >Jumlah Anggaran (Rp)</th>
                <th class="header" >Option</th>
              </tr>

           
            </thead>
            
            <tbody>
              <% for(let i =0; i < ata.length; i++){%>
                <tr>
                  <td><%= i+1%></td>
                  <td><%= ata[i].kegiatanPrioritas%></td>
                  <td><%= ata[i].jenis%></td>
                  <td><%= ata[i].lokasi%></td>
                  <td><%= ata[i].kec%></td>
                  <td><%= ata[i].kel%></td>
                  <td><%= (ata[i].SHAPE)?ata[i].SHAPE:'-'%></td>
                  <td><%= ata[i].volume%> <%= ata[i].satuan%></td>
                  <td><%= ata[i].jenisAnggaran%></td>
                  <td><%= ata[i].jumlahAnggaran%></td>
      
                  <td><a href="/kegiatan/cetak/<%= ata[i].id%>" target="_blank" class="btn btn-primary btn-sm btn-embossed">Cetak</a></td>
                </tr>
                <%}%>
           
            </tbody>
          </table>
        </div>
      </div>
    </div>  
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2020 </span>
        <span>Pemerintah Kota Salatiga</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->



